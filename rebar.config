%% -*- mode: Erlang; -*-
{deps, [
  {lager, ".*", {git, "https://github.com/basho/lager.git", "3.0.1"}},
  {ulitos, ".*", {git, "https://github.com/palkan/ulitos.git", "v0.2.0"}},
  {meck, ".*", {git, "https://github.com/eproxus/meck.git", "0.8.3"}},
  {eunit_formatters, ".*", {git, "https://github.com/seancribbs/eunit_formatters.git", "master"}},
  {ranch, ".*", {git, "https://github.com/ninenines/ranch.git", "1.1.0"}},
  {cowboy, ".*", {git, "https://github.com/ninenines/cowboy.git", "341f991d58fde702f68fa9d0076ad6dc2f942917"}},
  {jsx, ".*", {git, "https://github.com/talentdeficit/jsx.git", "v2.4.0"}},
  {eredis, ".*", {git, "https://github.com/wooga/eredis", "v1.0.8"}},
  {poolboy, ".*", {git, "https://github.com/devinus/poolboy.git", "1.5.1"}},
  {gun, ".*", {git, "https://github.com/ninenines/gun.git", "1.0.0-pre.1"}}
]}.
{require_otp_vsn, "18"}.
{erl_opts, [
  debug_info, 
  {i, "apps"}, 
  warn_unused_vars, 
  {parse_transform, lager_transform}
]}.
{clean_files, ["*.eunit", "ebin/*.beam", "specs/*.beam", "specs/logs/*"]}.
{eunit_opts, [
  no_tty,
  {report,{eunit_progress, [colored, profile]}}]}.
{ct_dir, "specs"}.
{ct_log_dir, "specs/logs"}.
{ct_extra_params, "-config specs/test.config"}.